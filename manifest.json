{
  "manifest_version": 3,
  "name": "Anti-Debugger Bypass",
  "version": "1.0",
  "description": "Bypass common debugger traps and anti-debugging scripts.",
  "permissions": ["scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Anti-Debugger"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
